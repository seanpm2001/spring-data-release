def p = [:]
node {
	checkout scm
	p = readProperties interpolate: true, file: 'ci/release.properties'
}

pipeline {
	agent none

	options {
		disableConcurrentBuilds()
		buildDiscarder(logRotator(numToKeepStr: '14'))
	}

	stages {

		stage('Create Release Tag') {
			when {
				branch 'create-release-tag'
			}
			agent {
				docker {
					image 'springci/spring-data-release-tools:0.4'
				}
			}
			options { timeout(time: 4, unit: 'HOURS') }

			environment {
				GITHUB = credentials('3a20bcaa-d8ad-48e3-901d-9fbc941376ee')
				GITHUB_TOKEN = credentials('7b3ebbea-7001-479b-8578-b8c464dab973')
				REPO_SPRING_IO = credentials('repo_spring_io-jenkins-release-token')
				STAGING_PROFILE_ID = credentials('spring-data-release-deployment-maven-central-staging-profile-id')
				GIT_SIGNING_KEY = credentials('spring-gpg-github-private-key-jenkins')
				GIT_SIGNING_KEY_PASSWORD = credentials('spring-gpg-github-passphrase-jenkins')
				SONATYPE = credentials('oss-login')
			}

			steps {
				script {
 					input("We're about to create release tag ${p['release.version']} on GitHub. Are you SURE you want to build this tag?? ")

					sh "ci/build-spring-data-release-cli.bash"
 					sh "ci/create-release-tag.bash ${p['release.version']}"

					slackSend(
						color: (currentBuild.currentResult == 'SUCCESS') ? 'good' : 'danger',
						channel: '#spring-data-dev',
						message: (currentBuild.currentResult == 'SUCCESS')
								? "`${env.BUILD_URL}` - Release tag ${p['release.version']} has been created! You are ready to proceed with the next phase."
								: "`${env.BUILD_URL}` - Release tag ${p['release.version']} has failed! You MUST go clean up any lingering tags and commits.")
				}
			}
		}
	}

	post {
		changed {
			script {
				slackSend(
						color: (currentBuild.currentResult == 'SUCCESS') ? 'good' : 'danger',
						channel: '#spring-data-dev',
						message: "${currentBuild.fullDisplayName} - `${currentBuild.currentResult}`\n${env.BUILD_URL}")
				emailext(
						subject: "[${currentBuild.fullDisplayName}] ${currentBuild.currentResult}",
						mimeType: 'text/html',
						recipientProviders: [[$class: 'CulpritsRecipientProvider'], [$class: 'RequesterRecipientProvider']],
						body: "<a href=\"${env.BUILD_URL}\">${currentBuild.fullDisplayName} is reported as ${currentBuild.currentResult}</a>")
			}
		}
	}
}
